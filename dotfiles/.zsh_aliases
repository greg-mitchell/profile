# ls - common options
alias ls='ls --color=auto -vG'
alias ll='ls --color=auto -ahlvG'
alias la='ls --color=auto -vAG'
alias l='ls --color=auto -vCFG'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias less='less -R'

# Bazel
alias bb="bazel build"
alias br="bazel run"
alias bt="bazel test"
