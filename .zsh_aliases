# ls - common options
alias ls='ls --color=auto'
alias ls='ls --color=auto -G'
alias ll='ls --color=auto -ahlG'
alias la='ls -AG'
alias l='ls -CFG'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias less='less -R'

# Bazel
alias bb="bazel build"
alias br="bazel run"
alias bt="bazel test"
